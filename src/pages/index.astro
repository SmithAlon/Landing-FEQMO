---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import LogoPrincipal from '../components/LogoPrincipal.astro';
import MisionVision from '../components/MisionVision.astro';
import Galeria from '../components/Galeria.astro';
import Fabricaciones from '../components/Fabricaciones.astro';
import Contactos from '../components/Contactos.astro';
---

<Layout title="FEQMO | Inicio">
  <Header />
  
  <!-- Contenedor principal para Locomotive Scroll -->
  <div data-scroll-container>
    <main class="flex flex-col content-center justify-center w-full min-h-screen overflow-x-hidden">
      
      <!-- Sección Inicio -->
      <section 
        id="inicio" 
        class="scroll-mt-16" 
        data-scroll-section
      >
        <div data-scroll data-scroll-speed="0.5">
          <LogoPrincipal />
        </div>
      </section>

      <!-- Sección Misión/Visión -->
      <section 
        id="mision-vision" 
        class="scroll-mt-16" 
        data-scroll-section
      >
        <div data-scroll data-scroll-speed="0.2">
          <MisionVision />
        </div>
      </section>

      <!-- Sección Proyectos -->
      <section 
        id="proyectos" 
        class="scroll-mt-16" 
        data-scroll-section
      >
        <div data-scroll data-scroll-speed="0.3">
          <Galeria />
        </div>
      </section>

      <!-- Sección Fabricaciones -->
      <section 
        id="fabricaciones" 
        class="scroll-mt-16" 
        data-scroll-section
      >
        <div data-scroll data-scroll-speed="0.1">
          <Fabricaciones />
        </div>
      </section>

      <!-- Sección Contacto -->
      <section 
        id="contacto" 
        class="scroll-mt-16" 
        data-scroll-section
      >
        <div data-scroll data-scroll-speed="0.4">
          <Contactos />
        </div>
      </section>

    </main>
  </div>
</Layout>