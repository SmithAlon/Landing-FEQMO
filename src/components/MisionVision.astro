---
import { getCollection } from 'astro:content';
import type { CollectionEntry } from 'astro:content';

const secciones = await getCollection('secciones') as CollectionEntry<'secciones'>[];
const misionVision = secciones[0];
const { Content } = await misionVision.render();
---

<section class="w-full flex flex-col items-center justify-center px-2 py-4 sm:px-4 sm:py-8 md:py-12">
    <div class="relative w-full max-w-5xl items-center content-center mx-auto inset-shadow-indigo-500">
        <img 
            src={secciones[0].data.imagen} 
            alt="Mision y VisiÃ³n"
            class="w-full min-h-[85vh] object-cover object-center shadow-xl transition-all duration-300 ease-in-out sm:rounded-lg"
        />
        <div class="absolute inset-0 flex items-center justify-center">
            <span class="bg-white/90 text-black w-[92%] font-light px-1 text-center transition-all duration-300 ease-in-out sm:rounded-lg sm:max-w-[95%] md:max-w-[90%] lg:max-w-[85%] [&_strong]:mt-1 [&_strong]:mb-2 [&_strong]:text-xl sm:text-lg md:text-sm lg:text-sm [&_strong]:font-bold [&_strong]:text-[#0071cd] [&_p]:mt-0 [&_p]: [&_p]:text-base [&_p]:leading-relaxed">
                <Content />
            </span>
        </div>
    </div>
</section>