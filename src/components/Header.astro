---
import SlideBtn from './slideBtn.astro';
---

<div class="fixed top-0 left-0 right-0 md:left-32 md:right-32 bg-[#F4F4F4] z-50 border-b-1 border-l-1 border-r-1 rounded-b-md transition-all duration-300">
    <nav class="mx-auto flex items-center justify-between px-4 sm:px-6 lg:px-8 py-3 max-w-7xl">
        <div class="flex items-center">
            <button 
                class="hover:opacity-80 transition-opacity cursor-pointer" 
                onclick="window.location.href='/'"
            >
                <img 
                    src="/Feqmo_sinfondo-Photoroom.png" 
                    alt="Logo de FEQMO" 
                    class="h-10 w-auto transition-all duration-300"
                />
            </button>
        </div>

        <div class="flex items-center">
            <SlideBtn />
        </div>
    </nav>
</div>